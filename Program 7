## WAP to find whether an integer is odd or even.

#include<iostream>
using namespace std;

int main()
{
	
	int no;
	cout<<"Enter any number to check for even and odd: ";
	cin>>no;

	if(no%2==0)
		cout<<no<<" is an even number."<<endl;
	else
		cout<<no<<" is an odd number."<<endl;
    


    return 0;

}



