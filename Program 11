## WAP to find area and circumference of circle.


#include<iostream>
using namespace std;
int main()
{
	int r;
	float a,c;
	cout<<"Enter the radius of a circle:";
	cin>>r;
	
	a=3.14*r*r;
	c=2*3.14*r;
	cout<<"The Area of circle is : "<<a;
	cout<<"\nThe Circumference of circle is : "<<c<< endl;
	
	return 0;
}
