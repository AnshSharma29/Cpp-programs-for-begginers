## WAP which takes float number & convert them into integer & decimal.

#include<iostream>
using namespace std;
int main()
{
	float frac,a;
	int integ;
	cout<<"Enter a number in decimal form: ";
	cin >>a;
	integ = int(a);
	frac= a-integ;
	cout<<"\nThe Integer part is: "<< integ<<endl<< " The Fraction Part is "<<frac<< endl;
	
    return 0;
	
}
